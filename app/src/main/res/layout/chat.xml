<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:background="@color/white"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#959595"
        android:layout_marginTop="20dp"></View>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/card_1"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/img_p1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/person1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"></ImageView>
                <TextView
                    android:id="@+id/name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makenna Dias"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_p1"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 new message"
                    android:textColor="#F08405"
                    android:layout_below="@id/name_1"
                    android:layout_alignLeft="@id/name_1"></TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/carrow"
                    android:layout_toRightOf="@id/name_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentEnd="true"></ImageView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#959595"
            android:layout_below="@+id/card_1"
            ></View>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/card_1"
            android:layout_marginTop="5dp"
            android:id="@+id/card_2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"

                >
                <ImageView
                    android:id="@+id/img_p2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/person2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"></ImageView>
                <TextView
                    android:id="@+id/name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miracle Philips"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/img_p2"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No new message"
                    android:layout_below="@id/name_2"
                    android:layout_alignLeft="@id/name_2"></TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/carrow"
                    android:layout_toRightOf="@id/name_2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentEnd="true"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#959595"
            android:layout_below="@+id/card_2"
            ></View>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/card_2"
            android:layout_marginTop="5dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_3"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/img_p3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/person3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"></ImageView>
                <TextView
                    android:id="@+id/name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zaire Gouse"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/img_p3"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No new message"
                    android:layout_below="@id/name_3"
                    android:layout_alignLeft="@id/name_3"></TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/carrow"
                    android:layout_toRightOf="@id/name_3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_alignParentEnd="true"></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="-80dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/shome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shome"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/ssearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/sadd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></ImageButton>
        <ImageButton
            android:id="@+id/schat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cchat"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/sprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
    </LinearLayout>




</LinearLayout>